<bdy>
 <h1>Editing Book</h1>
<% if @book.errors.any? %>
  <div class="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>
 <% if @book.errors.any? %>
  <div class = "field" style>
   <div class="field_errors">
    <ladel>Title</ladel>
   </div>
   <div class="field_errors">
    <%= f.text_field:title %>
   </div>
  </div>
  <div class = "field">
   <div class="field_errors">
    <ladel for = "book_body">Body</ladel>
   </div>
   <div class="field_errors">
    <%= f.text_area :body %>
   </div>
  </div>
 <% else %>
  <div class = "field">
   <ladel>Title</ladel>
   <%= f.text_field:title %>
  </div>
  <div  class = "field">
   <ladel>Body</ladel>
   <%= f.text_area :body %>
  </div>
 <% end %>
 <div class= "action">
  <%= f.submit " Update Book " %>
 </div>
 <%= link_to "Show", book_path(@book.id) %>
 <%= link_to "Back", books_path %>
 <% end %>
 
 </body>

